<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<HBox xmlns:fx="http://javafx.com/fxml" fx:id="box" fx:controller="com.example.listview.ProductItemController">
    <children>
        <Label  fx:id="name" style="-fx-label-padding: 10; -fx-alignment: center-left"/>
        <Label  fx:id="price" style="-fx-label-padding: 10; -fx-alignment: center-left"/>
        <Region HBox.hgrow="ALWAYS"></Region>
        <Button text="+" onAction="#onPriceUp" style="-fx-label-padding: 10; -fx-alignment: center-right "/>
        <Button text="-" onAction="#onPriceDown" style="-fx-label-padding: 10; -fx-alignment: center-right" />
        <Button text="delete" onAction="#onDeleteProduct" style="-fx-label-padding: 10; -fx-alignment: center-right" />
    </children>
</HBox>